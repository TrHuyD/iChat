@model List<iChat.DTOs.Users.Messages.ChatMessageDto>

@foreach (var message in Model)
{
    <div class="flex items-start p-2 border-b border-gray-600">
        <!-- Avatar -->
        <img src="@message.SenderAvatarUrl" class="w-10 h-10 rounded-full mr-2">

        <!-- Message Content -->
        <div class="flex flex-col">
            <strong class="text-white">@message.SenderName</strong>
            <span class="text-gray-300 text-sm">@message.Content</span>
            <span class="text-gray-500 text-xs">@message.CreatedAt.ToString("HH:mm")</span>
        </div>
    </div>
}
