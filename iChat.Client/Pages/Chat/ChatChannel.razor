@page "/chat/{ServerId}/{RoomId}"
@using System.Threading.Channels
@using iChat.Client.DTOs.Chat
@using iChat.Client.Services.UserServices.Chat
@using iChat.DTOs.Users.Messages
@inject ChatMessageCacheService MessageManager
@inject ChatSignalRClientService ChatService
@inject UserStateService _userInfo
@inject NavigationManager _navigation
@inject UserMetadataService _userMetadataService
@inject iChat.Client.Services.Auth.JwtAuthHandler _https
@inject IJSRuntime JS
@implements IDisposable
@implements IAsyncDisposable

<div class="chat-layout" @onclick="HideContextMenu" @onkeydown="HandleEscapeKey">
    <!-- Left Chat Panel -->
    <div class="chat-container">
        <div class="chat-header">
            <h3>Room: @RoomId</h3>
            <div class="connection-status">
                <span class="@_connectionStatusClass">@_connectionStatus</span>
            </div>
        </div>

        <div class="chat-toolbar">
            <button class="chat-toolbar-button"
                    @onclick="TriggerLoadOlderHistoryRequest"
                    disabled="@(_isLoading || _isOldHistoryRequestButtonDisabled)">
                @if (_isLoading)
                {
                    <span class="spinner"></span>
                }
                else
                {
                    <span>Load Older</span>
                }
            </button>

            <button class="chat-toolbar-button" @onclick="ToggleSearchSidebar">Search</button>
        </div>

        <div class="messages-container" @ref="_messagesContainer" @onscroll="HandleScroll">
            <Virtualize Items="@_groupedMessages" Context="group" ItemSize="100">
                <div class="message-group" @key="group.Messages[0].Message.Id">
                    <div class="message-group-header">
                        <img class="avatar" src="@group.User.AvatarUrl" />
                        <span class="username">@group.User.DisplayName</span>
                        <span class="timestamp">@group.Timestamp.ToString("g")</span>
                    </div>

                    <div class="message-group-body">
                        @foreach (var item in group.Messages)
                        {
                            <div class="message @item.CssClass"
                                 id="message-@item.Message.Id"
                                 @oncontextmenu="(e => ShowContextMenu(e, item.Message.Id))"
                                 @oncontextmenu:preventDefault
                                 @key="item.Message.Id">

                                <div class="message-content">@item.Content</div>
                            </div>
                        }
                    </div>
                </div>
            </Virtualize>
        </div>

        @if (_showContextMenu)
        {
            <div class="context-menu" style="@_contextMenuStyle" @onclick:stopPropagation="true">
                <div class="context-item" @onclick="CopyMessageId">Copy Message ID</div>
                <div class="context-item" @onclick="ScrollToContextMessage">Scroll to Message</div>
            </div>
        }

        <div class="message-input">
            <input type="text" @bind="_newMessage" @bind:event="oninput"
                   placeholder="Type your message..." @onkeypress="HandleKeyPress" />
            <button @onclick="SendMessage">Send</button>
        </div>
    </div>

    <!-- Right Sidebar: Online Users or Search -->
    <div class="sidebar">
        @if (_showSearchSidebar)
        {
            <div class="search-sidebar">
                <input type="text"
                       @bind="_searchQuery"
                       @bind:event="oninput"
                       @onkeypress="HandleSearchKeyPress"
                       placeholder="Search..." />

                <ul>
                    @if (_searchResults.Count == 0 && !string.IsNullOrWhiteSpace(_searchQuery))
                    {
                        <li><em>No results</em></li>
                    }
                    else
                    {
                        @foreach (var result in _searchResults)
                        {
                            <li>@result.Content</li>
                        }
                    }
                </ul>
            </div>

        }
        else
        {
            <div class="online-list">
                <h4>Online Users</h4>
                <ul>
                    @foreach (var user in _onlineUsers)
                    {
                        <li>@user</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
